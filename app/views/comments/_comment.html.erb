
<%=  form_with(model: @comment, url: new_user_topic_comment_path(current_user.id,current_user.topic_ids), method: :create) do |form| %>

  <div class="form-group w-50">
    <%= form.label :content, "Write your comment here...."%>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit "Comment", class: 'btn btn-primary' %>
  </div>
<% end %>
