
<%=  form_with(model: @comment, url: user_topic_comments_path(@topic), method: :create,local: true, remote: true) do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= form.submit "add comment", class: 'btn btn-primary' %>
  </div>
<% end %>
